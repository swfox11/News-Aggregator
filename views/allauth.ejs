<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Feed</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            /* display: flex; */
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: rgb(145 143 145);
            color: rgb(255, 255, 255);
        }

        .container {
            display: flex;
            width: 100%;
            /* max-width: 1200px; Adjust max-width as needed */
        }

        .filter {
            position: fixed;
            top: 0.8vw;
            left: 0.8vw;
            bottom: 0.8vw;
            right: 1vw;
            /* width: 100%; Adjust the width as needed */
            
            background-color: #79727a; /* Example background color */
            padding: 2vw;
            box-sizing: border-box;
            overflow-y: auto; /* Allow scrolling if content exceeds the height */
            margin-right: 70%;
            border-radius: 16px;
            font-size: 2.2vw;
        }
        /* .filter form{
            width: 80%;
        } */
        .card-container {
            width: 70%;
            padding: 2vw;
            box-sizing: border-box;
            overflow-y: auto; /* Enable vertical scrolling if needed */
            margin-left: 30%;
            display: inline;
        }

        

        .button {
            padding: 1vw 2vw;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.3vw;
            margin-bottom: 0.1vw;
            text-decoration: none;
                }

        .button:hover {
            background-color: #0056b3;
        }

        /* Custom dropdown style */
        select, input{
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            padding: 1vw 2vw;
            border: 0.1vw solid #ccc;
            border-radius: 4vw;
            background-color: #19191f;
            color: rgb(254, 255, 255);
            font-size: 1.1vw;
            margin-bottom: 10px;
            width: 20vw;
        }

        /* Adjust select arrow */
        select::-ms-expand {
            display: none;
        }

        /* Adjust select arrow for Chrome/Edge */
        select::-webkit-inner-spin-button, select::-webkit-outer-spin-button {
            appearance: none;
            margin: 0;
        }

        /* Adjust select arrow for Firefox */
        select::-moz-focus-inner {
            border: 0;
            padding: 0;
        }

        label {
            display: block;
            margin-bottom: 0.5vw;
            color: rgb(255, 255, 255);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="filter">
            <form id="selectionForm" method="post" action="/auth/all">
                <!-- Query search -->
                <label for="searchQuery">Search key words or phrases</label>
                <input type="text" id="searchInput" name="searchQuery" placeholder="Enter your search query" required><br>
                <br>
                <!-- Language search -->
                <label for="language">Choose a language:</label>
                <select id="language" name="language">
                    <option value="" selected disabled>Enter a Language</option>
                    <option value="ar">Arabic</option>
                    <option value="de">German</option>
                    <option value="en">English</option>
                    <option value="es">Spanish</option>
                    <option value="fr">French</option>
                    <option value="he">Hebrew</option>
                    <option value="it">Italian</option>
                    <option value="nl">Dutch</option>
                    <option value="no">Norwegian</option>
                    <option value="pt">Portuguese</option>
                    <option value="ru">Russian</option>
                    <option value="sv">Swedish</option>
                    <option value="ud">Undefined</option>
                    <option value="zh">Chinese</option>
                </select> <br><br>

                <!-- Sort -->
                <label for="sort">Sort by</label>
                <select id="sort" name="sort">
                    <option value="" selected disabled>Choose</option>
                    <option value="relevancy">Relevancy</option>
                    <option value="popularity">Popularity</option>
                    <option value="publishedAt">Published At</option>
                </select> <br><br>

                <button type="submit" class="button">Submit</button>
            </form><br><br>
            <a href="/" class="button">Home</a><br><br>
        </div>
        
    </div>
    <script>
        const language = document.getElementById("language");
        language.addEventListener("change", function() {
          const selectedOption = this.options[this.selectedIndex];
          const languageName = selectedOption.text;
          selectedOption.text = "Search: " + languageName;
        });

        const sort = document.getElementById("sort");
        sort.addEventListener("change", function() {
          const selectedOption = this.options[this.selectedIndex];
          const sortName = selectedOption.text;
          selectedOption.text = "Sort By: " + sortName;
        });
    </script>
</body>
</html>




