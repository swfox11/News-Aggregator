        100% {
            background-position: 100% 0;
        }
}
        .container {
            display: flex;
            width: 100%;
            /* max-width: 1200px; Adjust max-width as needed */
        }

        .filter {
            position: fixed;
            top: 3vw;
            left: 0.8vw;
            bottom: 0.8vw;
            right: 1vw;
            /* width: 100%; Adjust the width as needed */
            
            background-color: #1e8a9e; /* Example background color */
            padding: 2vw;
            box-sizing: border-box;
            overflow-y: auto; /* Allow scrolling if content exceeds the height */
            margin-right: 50%;
            border-radius: 16px;
            font-size: 2.2vw;
        }
        /* .filter form{
            width: 80%;
        } */
        

        .button {
            padding: 1vw 2vw;
            background-color: #077a5f;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 2vw;
            margin-bottom: 0.1vw;
            text-decoration: none;
                
        }

        .button:hover {
            background-color: #0d6e17;
        }

        /* Custom dropdown style */
        

        /* Adjust select arrow for Firefox */
        
